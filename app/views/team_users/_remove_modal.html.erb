<div id="<%= local_assigns[:action] %>_user_modal" class="modal">
  <div class="modal-content">
    <div class="row">
      <%= form_tag("user/0", :method => :delete, class: "col s12 #{local_assigns[:action]}_user_form") do %>
        <div class="row">
          <div class="col s12">
            <h4><%= local_assigns[:title] %></h4>
            <p><%= local_assigns[:message] %></p>
          </div>
          <div class="input-field col s12">
            <input type="hidden" name="user_remove_id" id="user_remove_id"></input>
            <%= submit_tag("Remove", class: "btn red right") %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
